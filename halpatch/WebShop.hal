global
function string 255 ChekUnicode(string str)
begin
  string 10 c, c1;
  string 10 ucode;
  string 255 res,tmp; 
  integer slen,i,int;
  longint lmes;
  
  res = str;
  i=0;
  slen = Len(res);
	
	if(slen>0)then begin
		for(i=0;i<slen;i=i+1)begin
			c = mid(res,i,2);
			if(c==(chr(92) & "u"))then begin
				ucode = mid(res,i,6);
				lmes = POSNETHexToLong(ucode);
				int = lmes;
				res = left(res,i) & uchr(int) & right(res, (len(res)-(i+6)));
				slen = Len(res);
			end;
		end;
	end;
		
  ChekUnicode = res;
  return;
end;

